// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
	"name": "gltron",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true,
			"upgradePackages": true,
			"username": "vscode",
			"userUid": "automatic",
			"userGid": "automatic"
		},
		"ghcr.io/devcontainers/features/desktop-lite:1": {
			"version": "latest",
			"noVncVersion": "1.2.0",
			"password": "vscode",
			"webPort": "6080",
			"vncPort": "5901"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest"
		},
        "ghcr.io/devcontainers/features/sshd:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/rust:1": {
			"version": "latest"
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	"forwardPorts": [ 5901,	6080 ],
    "portsAttributes": {
		"5901": {
			"label": "Xtigervnc"
		},
		"6080": {
			"label": "noVNC"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "gcc -v",

	// Configure tool-specific properties.
	// "customizations": {},
	"customizations": {
		"vscode": {
			"extensions": [
				"asciidoctor.asciidoctor-vscode",
				"donjayamanne.githistory",
				"GitHub.copilot-chat",
				"GitHub.copilot",
				"Gruntfuggly.todo-tree",
				"matepek.vscode-catch2-test-adapter",
				"mhutchie.git-graph",
				// "eamodio.gitlens",
				"ms-azuretools.vscode-docker",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.hexeditor",
				"ms-vscode.live-server",
				"ms-vscode.makefile-tools",
				"rust-lang.rust-analyzer",
				// "serayuzgur.crates",
				"stkb.rewrap",
				"tamasfe.even-better-toml",
				"timonwong.shellcheck",
				"tomoki1207.pdf",
				"vadimcn.vscode-lldb"
			]
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

    // https://containers.dev/implementors/json_reference/#general-properties
    // https://code.visualstudio.com/remote/advancedcontainers/environment-variables
    "runArgs": [
        "--name", "audio",
        "--network", "host",
        // "-v", "/mnt/wslg/:/mnt/wslg/",
        "--env-file", ".devcontainer/devcontainer.env"
	],
    // https://code.visualstudio.com/remote/advancedcontainers/add-local-file-mount
    // "mounts": ["source=/mnt/wslg,target=/mnt/wslg,type=bind,consistency=cached"]
    "mounts": ["source=\\\\wsl.localhost\\Ubuntu-24.04\\mnt\\wslg,target=/mnt/wslg,type=bind,consistency=cached"]
}
